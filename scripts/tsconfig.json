{
  "compilerOptions": {
    "sourceMap": true,
    "noEmit": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["dom", "esnext"],
    // "allowJs": false,
    "jsx": "react",
    // "rootDirs": ["src", "stories"],
    // "baseUrl": "src",
    "incremental": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true
  }
}
