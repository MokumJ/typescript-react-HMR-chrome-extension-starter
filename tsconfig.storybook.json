{
  "compilerOptions": {
    "outDir": "./storybook/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["dom", "esnext"],
    "allowJs": false,
    "jsx": "react",
    "rootDirs": ["src", "stories"],
    "baseUrl": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "output", "scripts"]
}
